{
    "compilerOptions": {
        /* Basic Options */
        "target": "es2019",
        "module": "commonjs",
        "lib": [
            "es2019"
        ],
        "sourceMap": true,
        "incremental": true,
        "experimentalDecorators": true,
        /* Strict Type-Checking Options */
        "strict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "paths": {
            "@common/*": ["common/src/*"]
        }
    },
    "exclude": [
<% if (mongodb !== 'no') { -%>
        "migrator/template.ts"
<% } -%>
    ]
}
